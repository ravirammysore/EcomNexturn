@page
@model WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post">
    <div class="form-group w-25">
        <label asp-for="Login.Email">Email:</label>
        <input asp-for="Login.Email"  type="text" class="form-control" id="email" name="Email" />
        <span asp-validation-for="Login.Email" class="text-danger"></span>
    </div>
    <div class="form-group w-25">
        <label asp-for="Login.Password">Password:</label>
        <input asp-for="Login.Password" type="password" class="form-control" id="password" name="Password" />
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div><br />
    <button type="submit" class="btn btn-primary">Login</button>
</form>

